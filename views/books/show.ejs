<%- include('../partials/header') %>

<div class="row mt-4">
  <div class="col-md-4">
    <img src="<%= book.imageUrl %>" class="img-fluid" alt="<%= book.title %>"
         onerror="this.src='https://via.placeholder.com/300?text=No+Image'">
  </div>
  <div class="col-md-8">
    <h1><%= book.title %></h1>
    <p><strong>Author:</strong> <%= book.author %></p>
    <p><strong>Year Published:</strong> <%= book.yearPublished %></p>

    <div class="mt-4">
      <a href="/books/<%= book._id %>/edit" class="btn btn-warning">Edit</a>
      
      <!-- method-override use kiya gaya hai to make DELETE request. -->
      <form action="/books/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
      </form>
      <a href="/books" class="btn btn-secondary">Back to All Books</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
