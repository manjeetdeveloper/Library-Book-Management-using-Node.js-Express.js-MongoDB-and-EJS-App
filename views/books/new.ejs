<%- include('../partials/header') %>

<div class="container">
  <h1 class="mt-4 mb-4">Add New Book</h1>

  <form action="/books" method="POST">
    <!-- Title input field -->
    <div class="mb-3">
      <label for="title" class="form-label">Book Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <!-- Author input field -->
    <div class="mb-3">
      <label for="author" class="form-label">Author Name</label>
      <input type="text" class="form-control" id="author" name="author" required>
    </div>

    <!-- Year Published input field -->
    <div class="mb-3">
      <label for="yearPublished" class="form-label">Year Published</label>
      <input type="number" class="form-control" id="yearPublished" name="yearPublished" required>
    </div>

    <!-- Image URL input field -->
    <div class="mb-3">
      <label for="imageUrl" class="form-label">Book Cover Image URL (Optional)</label>
      <input type="url" class="form-control" id="imageUrl" name="imageUrl" placeholder="https://example.com/book-cover.jpg">
    </div>

    <!-- Submit and Cancel buttons -->
    <div class="mb-3">
      <button type="submit" class="btn btn-success">Add Book</button>
      <a href="/books" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>